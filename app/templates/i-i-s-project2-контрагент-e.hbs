<h3 class="ui header">{{t "forms.i-i-s-project2-контрагент-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field" data-test-i-i-s-project2-контрагент-e-----------="true">
    <label>{{t "forms.i-i-s-project2-контрагент-e.primarykey-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "guid")
      value=model.primarykey
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationObject "primarykey" "messages")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.тип
      class=(if (v-get validationObject "тип" "isInvalid") "error")
      label=(t "forms.i-i-s-project2-контрагент-e.тип-caption")
      data-test-i-i-s-project2-контрагент-e----=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "тип" "messages")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.наименование
      class=(if (v-get validationObject "наименование" "isInvalid") "error")
      label=(t "forms.i-i-s-project2-контрагент-e.наименование-caption")
      data-test-i-i-s-project2-контрагент-e-------------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "наименование" "messages")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.иНН
      class=(if (v-get validationObject "иНН" "isInvalid") "error")
      label=(t "forms.i-i-s-project2-контрагент-e.иНН-caption")
      data-test-i-i-s-project2-контрагент-e----=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "иНН" "messages")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.оГРН
      class=(if (v-get validationObject "оГРН" "isInvalid") "error")
      label=(t "forms.i-i-s-project2-контрагент-e.оГРН-caption")
      data-test-i-i-s-project2-контрагент-e-----=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "оГРН" "messages")}}
  </div>
</form>